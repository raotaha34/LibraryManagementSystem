@using Library_Management_System.Models
@{
    ViewData["Title"] = "Available Books";
    var books = ViewBag.Books as List<Book>;
}

<div class="container mt-5" style="color:#fff;">
    <h2 class="text-center mb-4" style="color:black;">📖 Available Books</h2>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @if (books != null && books.Any())
            {
                @foreach (var book in books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Quantity</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No books available</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Index" asp-controller="MemberDashboard" class="btn btn-outline-light" style="color:black; border:2px solid black;">Back to Dashboard</a>
    </div>
</div>
