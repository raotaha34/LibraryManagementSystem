@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .home-card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.15);
        border-radius: 20px;
        color: #fff;
    }

    .home-btn {
        transition: all 0.3s ease;
    }

        .home-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card home-card p-5 shadow-lg text-center" style="max-width: 600px;">

        <h1 class="fw-bold mb-3">📚 Library Management System</h1>
        <p class="mb-4 fs-5">
            Manage books, members, and issued records — all in one place.
        </p>

        <a class="btn btn-light btn-lg mb-3 home-btn"
           asp-controller="Books" asp-action="Index">
            📖 Manage Books
        </a>

        <a class="btn btn-light btn-lg mb-3 home-btn"
           asp-controller="Members" asp-action="Index">
            👤 Manage Members
        </a>

        <a class="btn btn-light btn-lg home-btn"
           asp-controller="IssuedBooks" asp-action="Index">
            🔄 Issued Books
        </a>

    </div>
</div>
